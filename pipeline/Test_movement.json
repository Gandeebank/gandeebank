{
	"name": "Test_movement",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "adls_source",
						"type": "DatasetReference",
						"parameters": {
							"Folder_name": {
								"value": "@pipeline().parameters.Source_Foldername",
								"type": "Expression"
							},
							"Source_Path": {
								"value": "@pipeline().globalParameters.Source_Path",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "adls_output",
						"type": "DatasetReference",
						"parameters": {
							"Folder_name": {
								"value": "@pipeline().parameters.Target_Foldername",
								"type": "Expression"
							},
							"Target_Path": {
								"value": "@pipeline().globalParameters.Target_Path",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"Source_Foldername": {
				"type": "string",
				"defaultValue": "csvfiles"
			},
			"Target_Foldername": {
				"type": "string",
				"defaultValue": "output"
			}
		},
		"annotations": []
	}
}